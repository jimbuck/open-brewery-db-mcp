{
	"name": "@jimbuck/open-brewery-db-mcp",
	"version": "0.1.2",
	"description": "An MCP server for Open Brewery DB service",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "npx @modelcontextprotocol/inspector tsx src/index.ts",
		"watch": "tsc --watch",
		"test": "vitest --run --slowTestThreshold 1500",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"brewery",
		"api"
	],
	"author": "Jim Buck <jim@jimbuck.io>",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.0.0",
		"zod": "^3.25.51"
	},
	"devDependencies": {
		"@modelcontextprotocol/inspector": "^0.14.0",
		"@types/node": "^20.0.0",
		"@typescript-eslint/eslint-plugin": "^8.35.0",
		"@typescript-eslint/parser": "^8.35.0",
		"@vitest/ui": "^3.2.2",
		"eslint": "^9.29.0",
		"tsx": "^4.0.0",
		"typescript": "^5.0.0",
		"vitest": "^3.2.2"
	},
	"engines": {
		"node": ">=18"
	}
}
